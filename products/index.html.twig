{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
 <section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.png')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">PRODUITS</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>
<section class="container">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateurs</th>
                <th>Produits</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
               <td>{{ product.id }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.categorie.name }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('products_show', {'id': product.id}) }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong>Voir</strong></center></div></a>
                    <a href="{{ path('products_edit', {'id': product.id}) }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong>Modifier</strong></center></div></a>
                </td>
            </tr>
        {% else %}
           <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products_new') }}"> <div class="p-3 mb-2 bg-light text-dark"><center><strong>Cr√©er Nouveau</strong></center></div></a>


</section>
{% endblock %}

