{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
     <section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">PRODUIT</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>




    <section class="container">
    <table class="table table-hover table-dark">
        <tbody>
       <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ product.categorie.name }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>

                <td>
                    {% if app.request.attributes.get('_route')=='products_show' %} {% for image in product.images %}

                    <div class="container col md5">
                        <img src="{{asset('/uploads/' ~ image.link)}}" alt="article" width="300" , height="450"> {# <a href="{{path('articles_delete_image',{'id':image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}"> supprimer </a>                    #}

                    </div>

                    {% endfor %} {% endif %}

                </td>
            </tr>
        </tbody>
    </table> 



    <a href="{{ path('products_index') }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong> Retourner à la liste <br></strong></center></div></a>

    <a href="{{ path('products_edit', {'id': product.id}) }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong> Modifier <br></strong></center></div></a>

    {{ include('products/_delete_form.html.twig') }}    </section>
{% endblock %}
