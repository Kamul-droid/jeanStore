{% extends 'base.html.twig' %}

{% block title %}Coupons index{% endblock %}

{% block body %}
    <h1> <section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
                    <h2><strong><div class="p-3 mb-2 bg-light text-dark">COUPONS</div></strong></h2>
                </div>
            </div>
        </div>
    </div>
</section></h1>





<section class="container">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Valeur</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.value }}</td>
                <td>{{ coupon.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('coupons_show', {'id': coupon.id}) }}">  <div class="p-3 mb-2 bg-light text-dark"><center><strong>Voir</strong></center></div></a>
                    <a href="{{ path('coupons_edit', {'id': coupon.id}) }}"> <div class="p-3 mb-2 bg-light text-dark"><center><strong>Modifier</strong></center></div></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coupons_new') }}"> <div class="p-3 mb-2 bg-light text-dark"><center><strong>Cr√©er nouveau</strong></center></div></a>
</section>
{% endblock %}
