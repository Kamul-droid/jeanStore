{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">Connexion</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
    
        
        <label for="inputEmail"><div class="p-3 mb-2 bg-dark text-light"><center><strong>Email</strong></center></div></a></label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <br><br>
        <label for="inputPassword"><div class="p-3 mb-2 bg-dark text-light"><center><strong>Mot de passe</strong></center></div></a></label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <br><br><br>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </div>
            <div class="col-md-6">
                <a class="btn btn-lg btn-secondary " href="{{ path('app_register') }}"> Register</a>
            </div>
        </div>
    </form>
</section>
{% endblock %}
