{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
    
     <section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">S'INSCRIRE</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container">

    {{ form_start(registrationForm) }}
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Prénom <br></strong></center></div></a>
        {{ form_row(registrationForm.firstName) }}
        <br>
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Nom de famille <br></strong></center></div></a>
        {{ form_row(registrationForm.lastName) }}
        <br>
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Email <br></strong></center></div></a>
        {{ form_row(registrationForm.email) }}
        <br>
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Mot de passe <br></strong></center></div></a>
        {{ form_row(registrationForm.plainPassword, {
            label: false
        }) }}
        <br>
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Adresse de facturation <br></strong></center></div></a>
        {{ form_row(registrationForm.billing) }}
        <br>
    <div class="p-3 mb-2 bg-dark text-light"><center><strong> Adresse d'expédition <br></strong></center></div></a>
        {{ form_row(registrationForm.shipping) }}
   <br>
        {{ form_row(registrationForm.rgpd, {label : false}) }} <strong>Veuillez cocher sans raison particulière</strong>
<br><br>
        <center><button type="submit" class="btn"><div class="p-3 mb-2 bg-dark text-light"><center><strong>S'inscrire <br></strong></center></div></a></button></center>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
