{% extends 'base.html.twig' %}

{% block title %}Coupons{% endblock %}

{% block body %}
<section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
                    <h2><strong><div class="p-3 mb-2 bg-light text-dark">COUPONS</div></strong></h2>
                </div>
            </div>
        </div>
    </div>
</section>


    <section class="container">
    <table class="table table-hover table-dark">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Code{% endtrans %}</th>
                <td>{{ coupon.code }}</td>
            </tr>
            <tr>
                <th>{% trans %}Value{% endtrans %}</th>
                <td>{{ coupon.value }}</td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ coupon.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('coupons_index') }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong>{% trans %}Retourner à la liste{% endtrans %}</strong></center></div></a>

    <a href="{{ path('coupons_edit', {'id': coupon.id}) }}"><div class="p-3 mb-2 bg-light text-dark"><center><strong>{% trans %}Modifier{% endtrans %}</strong></center></div></a>
    <a href="{{ path('coupons_new') }}"> <div class="p-3 mb-2 bg-light text-dark"><center><strong>{% trans %}Créer nouveau{% endtrans %}</strong></center></div></a>
    {{ include('coupons/_delete_form.html.twig') }}
</section>
{% endblock %}
