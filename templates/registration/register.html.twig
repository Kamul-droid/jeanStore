{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">{% trans %}S'INSCRIRE{% endtrans %}</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    
    <div class="container align-items-center" data-animation="fadeInUp" data-animation-delay="0.2s">
    
        <div class="col-auto">
            <div class="field_form icon_form">
                {{ form_start(registrationForm) }}
                <div class="align-middle">
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span> <i class="ti-user"></i></span> 
                            {{ form_widget(registrationForm.firstName,{'attr':{'class':'form-control', 'placeholder':"Entrer votre nom* ",'required':'required', 'id':'civilite'}})
                            }}

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span><i class="ti-author"></i> </span>
                            {{ form_widget(registrationForm.lastName,{'attr':{'class':'form-control', 'placeholder':"Entrer votre prenom *",'required':'required', 'id':'prenom'}})
                            }}

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span><i class="ti-email"></i> </span>
                            {{ form_widget(registrationForm.email,{'attr':{'class':'form-control', 'placeholder':"Entrer votre email *",'required':'required', 'id':'email'}})
                            }}

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span><i class="ti-password"></i> </span>
                            {{ form_widget(registrationForm.plainPassword,{'attr':{'class':'form-control', 'placeholder':"Entrer votre mot de passe *",'required':'required', 'id':'password'}})
                            }}

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span><i class="ti-add"></i> </span>
                            {{ form_widget(registrationForm.billing,{'attr':{'class':'form-control', 'placeholder':"Entrer votre adresse de facturation *",'required':'required', 'id':'billing'}})
                            }}

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <div class="form-input">
                            <span><i class=""></i> </span>
                            {{ form_widget(registrationForm.shipping,{'attr':{'class':'form-control', 'placeholder':"Entrer votre adresse de livraison *",'required':'required', 'id':'shipping'}})
                            }}

                        </div>
                    </div>
                    <div class=" col-lg-4">
                        <div class="custom-control custom-checkbox">
                            {{ form_label(registrationForm.rgpd, 'Rgpd') }}
                            <span><i class=""></i> Conditions générales d'utilisation</span>
                            {{ form_widget(registrationForm.rgpd,{'attr':{'class':' ', 'placeholder':"",'required':'required', 'id':'rgpd', 'type':'checkbox'}})
                            }}

                        </div>
                    </div>
                    
                
                        
                    <button type="submit" class="btn btn-primary">{% trans %}Register{% endtrans %}</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
    
    

{% endblock %}
