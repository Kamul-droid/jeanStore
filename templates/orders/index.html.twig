{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
<section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">{% trans %}All Orders {% endtrans %}</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>
    
<section class="container">
    <table class="table responsive">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}user{% endtrans %}</th>
                <th>{% trans %}product{% endtrans %}</th>
                <th>{% trans %}price{% endtrans %}</th>
                <th>{% trans %}Quantity{% endtrans %}</th>
                <th>{% trans %}Created{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.user.firstname}}</td>
                <td >
                    <table>
                    {% for item in order.product %}
                     <tr>
                     <td>{{ item.name }} </td> 
                    
                    {% endfor %}
                    </table>
                </td>
                <td>
                    <table>
                    {% for item in order.product %}
                    <tr>
                     <td class="row"> {{ item.price }} </td> 
                    </tr>
                     {% endfor %}
                    </table>
                </td>
                <td>
                    <table>
                        {% for item in order.productQties %}
                        <tr>
                         <td class="row"> {{ item.quantity }} </td> 
                        </tr>
                         {% endfor %}
                        </table>
                </td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('orders_show', {'id': order.id}) }}">{% trans %}show{% endtrans %}</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3"> {% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
</section>
{% endblock %}
