{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="breadcrumb_section page-title-light background_bg bg_fixed overlay_bg_blue_70" data-img-src="{{asset('deco/assets/images/blue5.jpg')}}"> 
	<div class="container">
    	<div class="row align-items-center">
        	<div class="col-sm-12 text-center">
            	<div class="page-title">
            		<h2><strong><div class="p-3 mb-2 bg-light text-dark">{% trans %}Connexion{% endtrans %}</div></strong></h2>

                    
                </div>
            </div>
        </div>
    </div>
</section>
<section class="container">
    <div class="col-md-12">
        

        <form method="post" class="form_style2">
            <div class="row">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            
                {% if app.user %}
                    <div class="mb-3">
                        {% trans %}You are logged in as{% endtrans %} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                    </div>
                {% endif %}
            
                <div class="form-group col-md-6">
                    <label for="inputEmail">Email <span class="required">*</span></label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword">{% trans %}Password{% endtrans %}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                </div>
            
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-primary" type="submit">
                            {% trans %}Sign in{% endtrans %}
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-secondary " href="{{ path('app_register') }}"> {% trans %}Register{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
{% endblock %}
